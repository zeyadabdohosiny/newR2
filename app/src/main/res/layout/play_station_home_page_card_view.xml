<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/Shop_Image_view"
        android:layout_width="97dp"
        android:layout_height="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/hazzard" />

    <TextView
        android:id="@+id/nameOftheshop"
        android:gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:text="Champions League"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1F1C18"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:text="PlayStion And Cafe"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="#1F1C18"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="115dp"
        android:src="@drawable/ic_map"/>

    <TextView
        android:id="@+id/locationOfTheShop"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="75dp"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#1F1C18"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="18dp"
        android:layout_marginTop="104dp"
        android:layout_marginLeft="115dp"
        android:src="@drawable/ic_cafe"/>
    <TextView
        android:id="@+id/menu_Of_TheShop"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="104dp"
        android:text="Menu"
        android:textColor="#1F1C18"
        android:textStyle="bold"
        android:textSize="15dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height=".1dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="130dp"
        android:background="#1F1C18"/>


</androidx.cardview.widget.CardView>