<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Image_For_HistoryPage"
        android:layout_width="112dp"
        android:layout_height="72dp"
        android:src="@drawable/hazzard"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of the Shop"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/Name_For_HistoryPage"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time and Date"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/HistoryPage_date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User COme or not"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/TxusercomeOrnot"/>
    <View
        android:layout_width="match_parent"
        android:layout_height=".2dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="115dp"
        android:background="#1F1C18"/>





</androidx.cardview.widget.CardView>