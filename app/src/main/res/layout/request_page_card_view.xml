<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/Image_For_Requuest_page"
            android:layout_width="112dp"
            android:layout_height="72dp"
            android:src="@drawable/hazzard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Of the User"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/Name_For_Requuest_page"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pc 1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/NameOfThePc_For_Requuest_page"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="230dp"
        />
    <TextView
        android:id="@+id/RateofTheUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="230dp"
        />
        <Button
            android:id="@+id/Accept_Request_Page"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="Accpted"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="130dp"

            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time and Data"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/TimeOftheRequest"/>
    <Button
        android:id="@+id/Rejected_requestPage"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:text="Decline"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="300dp"
        />


    <Button
        android:id="@+id/UserIsCome"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textSize="10dp"
        android:text="User Come"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="130dp"/>
    <Button
        android:id="@+id/UserDontCome"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:textSize="10dp"
        android:text="Not comming"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="300dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height=".2dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="183dp"
        android:background="#1F1C18"/>







</androidx.cardview.widget.CardView>